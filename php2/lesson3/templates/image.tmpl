<div class="galleryPreviewsContainer">
    {% for image in data %}
          <div class='{{ContainerClassName}}'>
              <img data-id="{{image.id}}}"
                      src="{{image.link}}"
                      class="{{ImgClassName}}"
                      alt="{{image.name}}"
                      data-full_image_url="{{image.link}}}"
                      data-views="{{image.views}}">
              <p><i class="fas fa-eye"></i> {{image.views}}</p>
          </div>
    {% endfor %}
</div>

